<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/layoutScrollpanduantransf"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp">

        <RelativeLayout
            android:id="@+id/layoutpandtransf"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="30dp">

            <LinearLayout
                android:id="@+id/lineartransficon1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/lineartransficon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal">

                    <ImageButton
                        android:id="@+id/plusTransficon"
                        android:layout_width="30dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:clickable="true" />
                    <TextView
                        android:id="@+id/headerTxttransficon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="15dp"
                        android:textStyle="bold"
                        android:textSize="20dp"
                        android:text="@string/headerInfoTrans1"
                        android:layout_gravity="center"
                        android:textColor="@color/black" />
                </LinearLayout>
            </LinearLayout>

                <LinearLayout
                    android:id="@+id/lineartransf1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/styles_background"
                    android:gravity="left"
                    android:layout_marginTop="40dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/headerTxttransf"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:padding="15dp"
                        android:text="@string/headerInfoTrans1Button"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:textColor="@color/white" />



                </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutDesc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:animateLayoutChanges="true"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/txtDesctransf"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="0"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:lineSpacingExtra="2dp"
                    android:text="@string/panduantransf"
                    android:textColor="@color/black"/>
            </LinearLayout>


                <LinearLayout
                    android:id="@+id/lineartransf2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/linearTop"
                    android:background="@drawable/styles_background"
                    android:gravity="left"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/headerTxt2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:padding="15dp"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:text="@string/headerInfoTrans2"
                        android:textColor="@color/white" />


                </LinearLayout>



                <LinearLayout
                    android:id="@+id/lineartransf3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/linearTop"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/styles_background"
                    android:gravity="left"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/headerTxt3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:padding="15dp"
                        android:text="@string/headerInfoTrans3"
                        android:textColor="@color/white" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lineartransf4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/linearTop"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/styles_background"
                    android:gravity="left"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/headerTxt4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:padding="15dp"
                        android:text="@string/headerInfoTrans4"
                        android:textColor="@color/white" />


                </LinearLayout>

            </LinearLayout>

        </RelativeLayout>
    </ScrollView>




</RelativeLayout>