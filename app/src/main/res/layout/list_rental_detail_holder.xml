<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_gray"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:layout_marginBottom="10dp"
    android:orientation="vertical"
    >

    <LinearLayout
        android:id="@+id/tunggakanLinear"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="horizontal"
        android:weightSum="1">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.4"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="30dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tgl Jatuh Tempo"
                android:gravity="center"
                android:textSize="12sp"
                android:textColor="@color/black"/>
            <TextView
                android:id="@+id/tanggaljatuhtempotxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="25 Mei"
                android:gravity="center"
                android:layout_marginTop="15dp"
                android:textStyle="bold"
                android:textSize="16sp"
                android:fontFamily="sans-serif-condensed"
                android:textColor="@color/black"/>
            <TextView
                android:id="@+id/tahunjatuhtempotxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2018"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="16sp"
                android:fontFamily="sans-serif-condensed"
                android:textColor="@color/black"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.6"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="10dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/cicilantxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cicilan : Rp. 1.000.000.000,-"
                android:textStyle="bold"
                android:textSize="12sp"
                android:fontFamily="sans-serif-condensed"
                android:textColor="@color/md_material_blue_600"/>

            <TextView
                android:id="@+id/tglpembayarantxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tgl Pembayaran : 16 Mei 2018"
                android:layout_marginTop="15dp"
                android:textSize="12sp"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/saldoHutangtxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:fontFamily="sans-serif-condensed"
                android:text="Saldo Hutang : Rp. 1.000.000.000,-"
                android:textColor="@color/black"
                android:textSize="12sp"/>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/tanpatunjanganlinear"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:gravity="center"
        android:visibility="gone"
        android:background="@drawable/rounded_gray"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Aplikasi anda sudah lunas"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:fontFamily="sans-serif-smallcaps"
            android:layout_gravity="center"
            />

    </LinearLayout>

    <TextView
        android:id="@+id/lunastxt"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:text="LUNAS"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:gravity="center"
        android:visibility="gone"/>


</LinearLayout>



